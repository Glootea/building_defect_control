    "version": "0.2.0",
    "configurations": [

        {
            "name": "control",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "control testing",
            "request": "launch",
            "toolArgs": [
                "--dart-define",
                "TESTING=true",
            ],
            "type": "dart"
        },
        {
            "name": "control local backend",
            "request": "launch",
            "toolArgs": [
                "--dart-define",
                "BACKEND_URL=http://localhost:8080",
                "--dart-define",
                "USE_NETWORK_LOGGING=true",
            ],
            "type": "dart"
        },
        {
            "name": "control (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "control (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}